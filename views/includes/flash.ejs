<!-- for success flah -->
  <%  if(success && success.length){   %>   <!-- success is an array so we have to define its length so that whenever length is less than 0 it does not print flash    -->
<div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
  <%= success %>   <!-- accessing flash where to display --> 
   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%  }  %> 




